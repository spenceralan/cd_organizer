<h1><%= @message %></h1>
<form action="/add-cd">
  <div class="form-group">
     <label for="title">CD title:</label>
     <input name="title" id="title" class="form-control" type="text">
     <label for="artist">Artist:</label>
     <input name="artist" id="artist" class="form-control" type="text">
  </div>
  <button class="btn btn-success">Add CD</button>
</form>


<hr>

<% if !Collection.all_cds.empty? %>
<h1>My CDs:</h1>
<% end %>
<ul>
  <% Collection.all_cds.each do |cd| %>
    <%= "<li><a href='/edit-page/#{cd}'>#{cd.title}, by #{cd.artist}</a></li>" %>
  <% end %>
</ul>
